        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/feed.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
</head>
<body style="background-color: #000;">
    <% if(community == 'terrestrial') { %>
        <h1 class="text-center header"><span>ðŸŒ„</span> Plains and Mountains <span>ðŸŒ„</span></h1>
    <% }%>
    <% if(community == 'ocean') { %>
        <h1 class="text-center header"><span>ðŸŒŠ</span> Seas and Oceans <span>ðŸŒŠ</span></h1>
    <%}%>
    <% if(community == 'rainforest') { %>
        <h1 class="text-center header"><span>ðŸŒ³</span> Tropical Rainforests <span>ðŸŒ³</span></h1>
    <% } %> 
    <% if(community == 'desert') { %>
        <h1 class="text-center header"><span>ðŸŒµ</span> Deserts <span>ðŸŒµ</span></h1>
    <% } %>   
    <h2 class="text-center header">All Feed</h2>
    <div class="card-group">
        <% posts.forEach(post => { %>
            
                <div class="card">
                    <% if(community == 'terrestrial') { %>
                        <img src="/img/land.jpg" class="card-img-top" alt="...">
                    <% } %>
                    <% if(community == 'ocean') { %>
                        <img src="/img/ocean.jpg" class="card-img-top" alt="...">
                    <% } %>
                    <% if(community == 'rainforest') { %>
                        <img src="/img/rainforest.jpg" class="card-img-top" alt="...">
                    <% } %>
                    <% if(community == 'desert') { %>
                        <img src="/img/desert.jpg" class="card-img-top" alt="...">
                    <% } %>
                    <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text"><%= post.post %></p>
                    </div>
                    <div class="card-footer">
                    <small class="text-muted">Created on <%= post.createdAt.toDateString() %> by <%= post.name %></small>
                    </div>
                </div>
        <% }) %>
    </div>  
</body>
</html>